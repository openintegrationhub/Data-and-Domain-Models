{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$id": "http://openintegrationhub.org/schemas/addresses/shared-definitions.json",
  "title": "SharedDefinitions",
  "description": "Shared Definitions for the Master Data Model for Addresses to use in the Open Integration Hub",

  "definitions": {
    "Address": {
      "type": "object",
      "properties": {
        "street": {
          "type": "string"
        },
        "streetNumber": {
          "type": "string"
        },
        "unit": {
          "type": "string"
        },
        "zipCode": {
          "type": "string"
        },
        "town": {
          "type": "string"
        },
        "district": {
          "type": "string"
        },
        "region": {
          "type": "string"
        },
        "country": {
          "type": "string"
        }
      }
    },
    "Phone": {
      "type": "object",
      "properties": {
        "phoneNumber": {
          "type": "string"
        }
      }
    },
    "Fax": {
      "type": "object",
      "properties": {
        "faxNumber": {
          "type": "string"
        }
      }
    },
    "EMail": {
      "type": "object",
      "properties": {
        "eMail": {
          "type": "string"
        }
      }
    },
    "Social": {
      "type": "object",
      "properties": {
        "network": {
          "type": "string",
          "description": "Provision name of social network"
        },
        "id": {
          "type": "string",
          "description": "Provision social network ID or username"
        }
      },
      "Url": {
        "type": "object",
        "properties": {
          "url": {
            "type": "uri"
          }
        }
      },
      "Category": {
        "type": "object",
        "properties": {
          "categoryName": {
            "type": "string"
          }
        }
      }
    }
  }
}
