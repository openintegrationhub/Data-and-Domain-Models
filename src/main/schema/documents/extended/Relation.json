{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://github.com/openintegrationhub/Data-and-Domain-Models/blob/master/src/main/schema/documents/extended/Relation.json",
  "title": "Object",
  "description": "Relation between two objects in the system.",
  "type": "object",
  "allOf": [{
    "$ref": "../../oih-data-record.json"
  }],
  "properties": {
    "label": {
      "type": "string",
      "description": "Name of the relation",
      "examples": ["Relates to"]
    },
    "type": {
      "type": "string",
      "enum": ["link", "reference"],
      "description": "Type of the relation",
      "examples": ["link"	]
    },
    "targetUid": {
      "type": "string",
      "description": "target object",
      "examples": ["9bd1f8dd-5040-4b19-bbc9-c5cbb9c8d4b8"]
    },
    "sourceUid": {
      "type": "string",
      "description": "source object",
      "examples": ["9bd1f8dd-5040-4b19-bbc9-c5cbb9c8d4b8"]
    }
  }
}
